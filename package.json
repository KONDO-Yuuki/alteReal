{
  "name": "altereal",
  "main": "index.html",
  "js-flags": "--expose-gc",
  "window": {
    "title": "",
    "toolbar": false,
    "width": 816,
    "height": 624,
    "icon": "icon/icon.png"
  },
  "scripts": {
    "format": "prettier --write **/*.js **/*.json",
    "prettier-watch": "onchange '**/*.js' '**/*.json' -- prettier --write {{changed}}"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "husky": "^2.3.0",
    "lint-staged": "^8.1.7",
    "onchange": "^6.0.0",
    "prettier": "^1.17.1"
  }
}
