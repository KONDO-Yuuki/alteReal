{
  "name": "altereal",
  "main": "index.js",
  "js-flags": "--expose-gc",
  "window": {
    "title": "",
    "toolbar": false,
    "width": 816,
    "height": 624,
    "icon": "icon/icon.png"
  },
  "scripts": {
    "start": "npm-run-all -p server browser",
    "server": "node ./index.js",
    "browser": "opener http://localhost:3000?test",
    "format": "prettier --write **/*.js **/*.json",
    "prettier-watch": "onchange '**/*.js' '**/*.json' -- prettier --write {{changed}}"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "husky": "^2.3.0",
    "lint-staged": "^8.1.7",
    "npm-run-all": "^4.1.5",
    "onchange": "^6.0.0",
    "opener": "^1.5.1",
    "prettier": "^1.17.1"
  },
  "dependencies": {
    "express": "^4.18.2"
  }
}
